{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["helm-values","kubernetes","kustomize"],
  "kubernetes": {
    "managerFilePatterns": [
      "/infrastructure/core/[^/]+/.*\\.ya?ml$/",
      "/infrastructure/platform/[^/]+/.*\\.ya?ml$/",
      "/workloads/[^/]+/.*\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/infrastructure/core/[^/]+/values\\.ya?ml$/",
      "/infrastructure/platform/[^/]+/values\\.ya?ml$/",
      "/workloads/[^/]+/values\\.ya?ml$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/infrastructure/core/[^/]+/kustomization\\.ya?ml$/",
      "/infrastructure/platform/[^/]+/kustomization\\.ya?ml$/",
      "/workloads/[^/]+/kustomization\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Catch ArgoCD applications in infra, platform, workloads",
      "managerFilePatterns": [
        "/infrastructure/.*\\.ya?ml$/",
        "/workloads/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "repoURL:\\s+\"?(?<depName>[^\\s\"]+)\"?\\s*",
        "targetRevision:\\s+\"?(?<currentValue>[^\\s\"]+)\"?"
      ],
      "datasourceTemplate": "git-tags"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false
    }
  ]
}

